<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar xmlns = "http://java.sun.com/xml/ns/javaee"
         version = "3.1"
         xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation = "http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/ejb-jar_3_1.xsd">
    <enterprise-beans>
        <session>
            <ejb-name>UniBoardServiceImpl</ejb-name>
            <ejb-local-ref>
                <ejb-ref-name>ch.bfh.uniboard.webservice.UniBoardServiceImpl/postSuccessor</ejb-ref-name>
                <local>ch.bfh.uniboard.service.PostService</local>
                <ejb-link>SectionedComponent</ejb-link>
            </ejb-local-ref>
            <ejb-local-ref>
                <ejb-ref-name>ch.bfh.uniboard.webservice.UniBoardServiceImpl/getSuccessor</ejb-ref-name>
                <local>ch.bfh.uniboard.service.GetService</local>
                <ejb-link>SectionedComponent</ejb-link>
            </ejb-local-ref>
        </session>
        <session>
            <ejb-name>SectionedComponent</ejb-name>
            <ejb-local-ref>
                <ejb-ref-name>ch.bfh.uniboard.sectioned.SectionedComponent/postSuccessor</ejb-ref-name>
                <local>ch.bfh.uniboard.service.PostService</local>
                <ejb-link>PersistenceService</ejb-link>
            </ejb-local-ref>
            <ejb-local-ref>
                <ejb-ref-name>ch.bfh.uniboard.sectioned.SectionedComponent/getSuccessor</ejb-ref-name>
                <local>ch.bfh.uniboard.service.GetService</local>
                <ejb-link>PersistenceService</ejb-link>
            </ejb-local-ref>
        </session>
    </enterprise-beans>
</ejb-jar>