<?xml version="1.0" encoding="UTF-8"?>

<ejb-jar version="3.1"
		 xmlns="http://java.sun.com/xml/ns/javaee"
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/ejb-jar_3_1.xsd">

	<enterprise-beans>
		<session>
			<ejb-name>UniBoardRestServiceBean</ejb-name>
			<ejb-local-ref>
				<ejb-ref-name>ch.bfh.uniboard.restservice.UniBoardRestServiceBean/postSuccessor</ejb-ref-name>
				<local>ch.bfh.uniboard.service.PostService</local>
				<ejb-link>MockService</ejb-link>
			</ejb-local-ref>
			<ejb-local-ref>
				<ejb-ref-name>ch.bfh.uniboard.restservice.UniBoardRestServiceBean/getSuccessor</ejb-ref-name>
				<local>ch.bfh.uniboard.service.GetService</local>
				<ejb-link>MockService</ejb-link>
			</ejb-local-ref>
		</session>
	</enterprise-beans>

</ejb-jar>
